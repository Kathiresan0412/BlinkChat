MONGO_DB_NAME=blinkchat


# Optional: JWT signing (if set, overrides DJANGO_SECRET_KEY for JWT only)
# JWT_SECRET=your-jwt-secret-change-in-production

# Port for ASGI server (e.g. Daphne); many hosts set PORT automatically
PORT=8000
